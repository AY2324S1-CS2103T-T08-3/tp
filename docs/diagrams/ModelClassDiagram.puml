@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor MODEL_COLOR
skinparam classBackgroundColor MODEL_COLOR

Package Model as ModelPackage <<Rectangle>>{
Class "<<interface>>\nReadOnlyTaskHub" as ReadOnlyTaskHub
Class "<<interface>>\nReadOnlyUserPrefs" as ReadOnlyUserPrefs
Class "<<interface>>\nModel" as Model
Class TaskHub
Class ModelManager
Class UserPrefs

Class UniqueEmployeeList
Class Employee
Class Address
Class Email
Class Name
Class Phone
Class Tag

Class I #FFFFFF
}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Model

TaskHub .up.|> ReadOnlyTaskHub

ModelManager .up.|> Model
Model .right.> ReadOnlyUserPrefs
Model .left.> ReadOnlyTaskHub
ModelManager -left-> "1" TaskHub
ModelManager -right-> "1" UserPrefs
UserPrefs .up.|> ReadOnlyUserPrefs

TaskHub *--> "1" UniqueEmployeeList
UniqueEmployeeList --> "~* all" Employee
Employee *--> Name
Employee *--> Phone
Employee *--> Email
Employee *--> Address
Employee *--> "*" Tag

Employee -[hidden]up--> I
UniqueEmployeeList -[hidden]right-> I

Name -[hidden]right-> Phone
Phone -[hidden]right-> Address
Address -[hidden]right-> Email

ModelManager --> "~* filtered" Employee
@enduml
